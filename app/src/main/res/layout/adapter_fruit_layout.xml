<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fruit_item_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fruit_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/com_left_right"
        android:layout_marginStart="@dimen/com_left_right"
        android:text="苹果"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/fruit_item_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/com_left_right"
        android:layout_marginStart="@dimen/com_left_right"
        android:text="价格："
        app:layout_constraintLeft_toRightOf="@id/fruit_item_image"
        app:layout_constraintTop_toBottomOf="@id/fruit_item_name" />

    <TextView
        android:id="@+id/fruit_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥10"
        app:layout_constraintLeft_toRightOf="@id/price1"
        app:layout_constraintTop_toBottomOf="@id/fruit_item_name" />

    <TextView
        android:id="@+id/fruit_item_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/com_left_right"
        android:layout_marginStart="@dimen/com_left_right"
        android:text="来自湖南本地又大又甜的西瓜，来自湖南本地又大又甜的西瓜"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fruit_item_image"
        app:layout_constraintLeft_toRightOf="@id/fruit_item_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price1" />

    <View
        style="@style/line_width_full_height_1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fruit_item_image" />
</android.support.constraint.ConstraintLayout>
