<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44px"
        android:background="@color/colorNormal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Four" />

    <View style="@style/line_width_full_height_1dp" />

    <ImageView
        android:id="@+id/mime_avator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/height_20px"
        android:src="@drawable/person_fake_icon" />

    <TextView
        android:id="@+id/personal_page_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ripple_bg"
        android:drawableEnd="@drawable/arrow_right"
        android:gravity="right|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="清除缓存" />


    <Button
        android:id="@+id/personal_page_exit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/height_80px"
        android:layout_marginStart="@dimen/height_80px"
        android:layout_marginTop="@dimen/height_40px"
        android:background="@drawable/btn_common_bg"
        android:text="退出登陆" />
</LinearLayout>
